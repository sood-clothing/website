{
  "version": 2,
  "alisas": ["sood.co"],
  "builds": [
    {
      "src": "www/next.config.js",
      "use": "@now/next"
    },
    {
      "src": "api/signup",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/www/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ],
  "env": {
    "MAILCHIMP_APIKEY": "@mailchimp-api-key",
    "MAILCHIMP_DC": "@mailchimp-dc",
    "MAILCHIMP_LISTID": "@mailchimp-list-id",
    "NODE_ENV": "production"
  }
}
